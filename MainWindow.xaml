<Window x:Class="Raw2CDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raw2CDF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar Height="40" Margin="0,10,0,0" VerticalAlignment="Top">
            <Menu Width="100" >
                <MenuItem Header="MenuItem" Height="100" Margin="0" Width="100" InputGestureText="File"/>
            </Menu>
        </ToolBar>
        <TextBox x:Name="targetFolderTextBox" HorizontalAlignment="Left" Height="23" Margin="49,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="297"/>
        <Button x:Name="runButton" Content="Run" HorizontalAlignment="Left" Margin="374,127,0,0" VerticalAlignment="Top" Width="75" Click="OnClick_RunButton" RenderTransformOrigin="2.34,-7.753"/>
        <StatusBar HorizontalAlignment="Left" Height="36" Margin="10,374,0,0" VerticalAlignment="Top" Width="772">
            <Label x:Name="statusLabel" Content="" Width="762"/>
        </StatusBar>
        <Label Content="Folder path for CDF files" HorizontalAlignment="Left" Margin="49,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.989,1.854"/>

    </Grid>
</Window>
